@page "/"
@layout LoginLayout

<PageTitle>Marlin</PageTitle>

<div class="vh-100 d-flex justify-content-center align-items-center">
      <div class="container-fluid">
        <div class="row d-flex justify-content-center">
          <div class="col-12 col-md-8 col-lg-6">
            <div class="card bg-white bg-opacity-75">
              <div class="card-body p-5">
                <form>
                  <div>
                    <label for="email" class="form-label">Email address</label>
                    <input type="email" class="form-control" id="email" placeholder="name@example.com">
                  </div>
                  <div class="mb-3">
                    <label for="password" class="form-label ">Password</label>
                    <input type="password" class="form-control" id="password" placeholder="*******">
                  </div>
                  <p class="small"><a class="text-primary" href="Identity/Account/ForgotPassword">Forgot password?</a></p>
                  <div class="d-grid">
                    <button class="btn btn-outline-dark" type="submit">Login</button>
                  </div>
                </form>
                  <div class="small text-center mt-4">Don't have an account?
                    <a href="Identity/Account/Register" class="text-primary">Register</a>
                    </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>